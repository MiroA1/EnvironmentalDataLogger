<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import fi.tuni.environmentaldatalogger.gui.CustomDateRangePicker?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10">
    <HBox fx:id="headerHBox" spacing="40">
        <HBox fx:id="optionsHBox" spacing="10">
            <HBox.margin>
                <Insets left="20"/>
            </HBox.margin>
            <MenuButton fx:id="parameterSelector" text="Select Parameters">

            </MenuButton>
            <ComboBox fx:id="rangeSelector">

            </ComboBox>
            <CustomDateRangePicker fx:id="customRangePicker" />
            <Button fx:id="coordinateDialogButton" text="Set Coordinates" />
            <Label fx:id="coordinateLabel" text="Coordinates: Not Set" />
        </HBox>
        <HBox fx:id="confirmHBox" spacing="10">
            <Button fx:id="loadButton" text="Load"/>
        </HBox>
        <HBox HBox.hgrow="ALWAYS"/>
        <HBox fx:id="removeHBox">
            <HBox.margin>
                <Insets right="10"/>
            </HBox.margin>
        </HBox>
    </HBox>
    <AnchorPane fx:id="chartBox" />
</VBox>